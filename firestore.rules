
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles.
    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAdmin() {
       return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAnyAdmin() {
      return isSuperAdmin() || isAdmin();
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection rules.
    match /users/{userId} {
      allow read: if isAnyAdmin() || isOwner(userId);
      allow update: if isAnyAdmin() || isOwner(userId);
      // Allow any authenticated user to create their own user document during signup.
      allow create: if request.auth != null; 
      // Only superadmins can delete user documents.
      allow delete: if isSuperAdmin();
    }

    // Blog collection rules.
    match /blog/{postId} {
      // Public can read published posts. Admins can read all posts.
      allow read: if resource.data.isPublished == true || isAnyAdmin();
      // Only admins can write (create, update, delete).
      allow write: if isAnyAdmin();
    }
    
    // Bookings collection rules.
    match /bookings/{bookingId} {
        // Authenticated users (company or individual) can create bookings.
        allow create: if request.auth != null;
        // Admins or the user who created the booking can read it.
        allow read: if isAnyAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
        // Only admins can update or delete bookings.
        allow update, delete: if isAnyAdmin();
    }

    // Halls and Dormitories are public to view. Only admins can modify.
    match /{collection}/{docId} where collection in ['halls', 'dormitories'] {
        allow read: if true;
        allow write: if isAnyAdmin();
    }
    
    // Notifications are for admins only.
    match /notifications/{notificationId} {
        allow read, write, create, delete: if isAnyAdmin();
    }
    
    // Site configuration can be read by anyone, but only written by admins.
    match /site_configuration/{docId} {
        allow read: if true; 
        allow write: if isAnyAdmin();
    }
  }
}
