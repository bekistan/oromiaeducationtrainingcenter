
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAnyAdmin() {
      return isSignedIn() && getUserData().role in ['admin', 'superadmin'];
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == 'superadmin';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Default deny all access to all documents.
    match /{document=**} {
      allow read, write: if false;
    }

    // PUBLIC COLLECTIONS
    // Anyone can read published blog posts, dormitories, halls, and site configuration.
    match /dormitories/{dormId} {
      allow read: if true;
    }
    match /halls/{hallId} {
      allow read: if true;
    }
    match /site_configuration/{configDoc} {
        allow read: if true;
    }
    
    // *** TEMPORARILY PUBLIC BLOG RULES FOR TESTING ***
    // Anyone can read, create, update, and delete blog posts.
    // This is NOT secure for production.
    match /blog/{postId} {
      allow read, write: if true;
    }

    // USER-SPECIFIC DATA
    // Rules for user profiles and their bookings.
    match /users/{userId} {
      allow read: if true;
      allow create: if true; // Allows new user registration.
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    match /bookings/{bookingId} {
      allow create: if isSignedIn() || request.resource.data.bookingCategory == 'dormitory';
      // Allow public read for both dormitory and facility bookings for availability checks.
      allow read: if isAnyAdmin() || isOwner(resource.data.userId) || resource.data.bookingCategory in ['dormitory', 'facility'];
      allow update: if isAnyAdmin() || isOwner(resource.data.userId);
      allow delete: if isAnyAdmin();
    }

    // ADMIN-ONLY COLLECTIONS
    // Only admins can write to these collections.
    match /dormitories/{dormId} {
      allow write: if isAnyAdmin();
    }
    match /halls/{hallId} {
      allow write: if isAnyAdmin();
    }
    match /notifications/{notificationId} {
      allow read, write: if isAnyAdmin();
    }
    match /site_configuration/{configDoc} {
      allow write: if isAnyAdmin();
    }
  }
}
